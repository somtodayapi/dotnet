<Page x:ConnectionId='1'
    x:Class="TestEnv1.Views.Inloggen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestEnv1.Views"
    xmlns:api="using:SOMTodayUWP.Models"
     RequestedTheme="Dark"
    xmlns:viewModels="using:TestEnv1.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModels:LoginViewModel x:ConnectionId='2' x:Name="ViewModel"/>
    </Page.DataContext>
    <Grid>
        <Grid.Transitions>
            <TransitionCollection>
                <RepositionThemeTransition/>
            </TransitionCollection>
        </Grid.Transitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#151922">
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="519*"/>
                <RowDefinition Height="101*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Image Source="ms-appx:///Assets/logo_som.png"   Margin="5" Stretch="Uniform"/>
                <TextBlock Style="{ThemeResource SubheaderTextBlockStyle}" Text="SomToday" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="50" Orientation="Vertical" Grid.Row="1"  >
                <TextBlock x:ConnectionId='12'                                 Style="{ThemeResource SubheaderTextBlockStyle}"/>
                <TextBlock x:ConnectionId='13' Margin="0,10"                                            Style="{ThemeResource TitleTextBlockStyle}" FocusVisualPrimaryBrush="#FF746F6F" Foreground="#FFCFC4C4"/>
                <TextBlock x:ConnectionId='14' Margin="0,30"                                                  Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="#FFA6A6A6"/>
                <Button x:ConnectionId='15' x:Name="ReadMore"
                        Style="{ThemeResource ButtonSubmitRed}"
                        Margin="0,1"
                        Width="130"
                        Background="#00A875"
                                                                
                        IsEnabled="True"
                        HorizontalAlignment="Left"
                          Foreground="White" FontWeight="Bold" FontFamily="Arial Black" >
                    
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,1,0,-1">
                <ComboBox x:ConnectionId='11'                                               Style="{StaticResource ComboBoxStyle1}"                                                  PlaceholderForeground="#FFA6A1A1" Foreground="#FFC1B5B5" >
                    <ComboBoxItem Content="Dutch"/>
                    <ComboBoxItem Content="English"/>
                </ComboBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Background="#00A875">
            <StackPanel Margin="50" VerticalAlignment="Center">
                <TextBlock x:ConnectionId='3'                                   Style="{ThemeResource TitleTextBlockStyle}"/>
                <TextBox x:ConnectionId='4' x:Name="LoginUsernameTextBox"
                         x:Uid="LoginUsernameTextBox"
                         Style="{ThemeResource TextBox}"
                         Margin="15,20"
                         FontSize="13.5"
                         Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                                       FocusVisualPrimaryBrush="White" SelectionHighlightColor="#FFAAA5A5" BorderBrush="#FFD6CDCD" />
                <PasswordBox x:ConnectionId='5' x:Name="LoginPasswordPasswordBox"
                             x:Uid="LoginPasswordPasswordBox"
                               FontSize="13.5"
                             Style="{ThemeResource PasswordBox}"
                            Margin="15,0"
                         
                                                                                                                     
                                                                              BorderBrush="#FFD6D5D5" />
                <CheckBox x:ConnectionId='6' x:Name="RememberMeCheckBox"
                          x:Uid="RememberMeCheckBox"
                                                                              
                          IsChecked="{Binding RememberLoginData, Mode=TwoWay}"
                          Margin="15,20,15,0" >
                </CheckBox>
                <StackPanel Orientation="Horizontal"> 
                <Button x:ConnectionId='7' x:Name="LoginButton"
                        Style="{ThemeResource ButtonSubmitRed}"
                        Margin="15,0,15,15"
                        Width="100"
                        Background="White"
                                                                 
                        IsEnabled="True"
                        HorizontalAlignment="Left"
                          Foreground="#00A875" FontWeight="Bold" FontFamily="Arial Black" >
                    </Button>
                    <ComboBox x:ConnectionId='8' x:Name="School" Style="{StaticResource ComboBoxStyle1}"                                                                                                        >
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="FrameworkElement">
                                <Setter Property="Margin" Value="2"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.ItemTemplate>
                            <DataTemplate                              >
                                <Grid x:ConnectionId='9'>
                                    <TextBlock x:ConnectionId='10'                     />
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <TextBlock x:Uid="LoginDisclaimerTextBox"
                           Style="{StaticResource TextNormal}"
                           Margin="15,0,15,20"
                           TextAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

